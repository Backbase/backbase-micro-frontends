{
  "name": "/client-api/v1/loans/{loanId}/payment-options_GET",
  "request": {
    "url": "/client-api/v1/loans/[^/]+/payment-options(\\?.*)?$",
    "method": "GET"
  },
  "responses": {
    "success": {
      "status": 200,
      "data": {
        "$schema": "../schemas/payment-options.yaml",
        "paymentOptions": [
          {
            "name": "LoanPayment",
            "operationType": "Credit",
            "allowed": true
          },
          {
            "name": "LoanAdvance",
            "operationType": "Debit",
            "allowed": false,
            "errorCodes": ["draw.amount.is.not.allowed"]
          }
        ]
      },
      "default": true
    },
    "badRequest": {
      "status": 400,
      "data": {
        "message": "Bad Request",
        "key": "GENERAL_ERROR",
        "errors": [
          {
            "message": "Value Exceeded. Must be between {min} and {max}.",
            "key": "common.api.shoesize",
            "context": {
              "max": "50",
              "min": "1"
            }
          }
        ]
      }
    },
    "notAuthorized": {
      "status": 401,
      "data": {
        "message": "Access to requested resource denied.",
        "key": "GENERAL_ERROR",
        "errors": [
          {
            "message": "Resource access denied due to invalid credentials.",
            "key": "common.api.token",
            "context": {
              "accessToken": "expired"
            }
          }
        ]
      }
    },
    "forbidden": {
      "status": 403,
      "data": {
        "message": "Access to requested resource denied.",
        "key": "GENERAL_ERROR",
        "errors": [
          {
            "message": "Resource access denied due to an insufficient user quota of {quota}.",
            "key": "common.api.quota",
            "context": {
              "quota": "someQuota"
            }
          }
        ]
      }
    },
    "notFound": {
      "status": 404,
      "data": {
        "message": "Resource not found.",
        "key": "GENERAL_ERROR",
        "errors": [
          {
            "message": "Unable to find the resource requested resource: {resource}.",
            "key": "common.api.resource",
            "context": {
              "resource": "aResource"
            }
          }
        ]
      }
    },
    "systemError": {
      "status": 500,
      "data": {
        "message": "Description of error"
      }
    }
  }
}
